# OPNsense API Configuration
# Copy this file to .env and fill in your actual credentials

# OPNsense Firewall IP/Hostname
OPNSENSE_HOST=10.10.10.1

# API Key (generated from System → Access → Users → API Keys)
OPNSENSE_API_KEY=your_api_key_here

# API Secret (generated alongside API Key)
OPNSENSE_API_SECRET=your_api_secret_here

# Optional: Disable SSL verification for self-signed certs (default: true)
OPNSENSE_VERIFY_SSL=false
